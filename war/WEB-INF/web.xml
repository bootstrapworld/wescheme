<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE web-app PUBLIC
	  "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
	  "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
  <app-engine-apis>true</app-engine-apis>

  <mime-mapping>
      <extension>ogg</extension>
      <mime-type>audio/ogg</mime-type>
  </mime-mapping>

  <mime-mapping>
      <extension>mp3</extension>
      <mime-type>audio/mpeg</mime-type>
  </mime-mapping>

  <app-engine-apis>true</app-engine-apis>

  <servlet>
    <servlet-name>/cron/keyServer</servlet-name>
    <servlet-class>org.wescheme.keys.KeyServer</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>



  <servlet-mapping>
    <servlet-name>/cron/keyServer</servlet-name>
    <url-pattern>/cron/keyServer</url-pattern>
  </servlet-mapping>

  <security-constraint>
        <web-resource-collection>
            <url-pattern>/cron/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
   </security-constraint>


  <!-- RemoteAPI: used for bulk data load -->
  <!-- http://code.google.com/appengine/docs/python/tools/uploadingdata.html -->
  <servlet>
    <servlet-name>RemoteApi</servlet-name>
    <servlet-class>com.google.apphosting.utils.remoteapi.RemoteApiServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RemoteApi</servlet-name>
    <url-pattern>/remote_api</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>createUser</servlet-name>
    <servlet-class>org.wescheme.servlet.CreateUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>createUser</servlet-name>
    <url-pattern>/createUser</url-pattern>
  </servlet-mapping>

